@layout DogAdoptionWebsite.Components.Layout.MainLayout
@page "/contact"

<style>
    body {
        background-color: #FFF9E3; /* Pale pastel yellow */
        color: #333333; /* Dark gray for text */
    }

    h3 {
        color: #C1440E; /* Brick color */
        margin-bottom: 20px;
    }

    p {
        font-size: 1.1rem;
        color: #333333;
        line-height: 1.6;
    }

    a {
        color: #C1440E;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            color: #A1360B; /* Slightly darker brick */
        }

    .contact-container {
        background-color: #FFF4DB; 
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
    }

        .contact-container p {
            margin-top: 10px;
        }
</style>

<div class="contact-container">
    <h3>Contact Us</h3>
    <p>
        If you have any questions or would like to get in touch, feel free to contact us!
    </p>
    <p>
        Email:
        <a href="mailto:support@dogadoptionwebsite.com">
            support@dogadoptionwebsite.com
        </a>
    </p>
</div>
